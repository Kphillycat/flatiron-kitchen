%h1 Editing recipe

= form_for @recipe, :html => {:id => "edit_recipe_#{@recipe.id}"} do |f|
  - if @recipe.errors.any?
    #error_explanation
      %h2= "#{pluralize(@recipe.errors.count, "error")} prohibited this recipe from being saved:"
      %ul
        - @recipe.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :recipe_name
    = f.text_field :name
    = collection_check_boxes(:ingredients, :ingredient_ids, Ingredient.all, :id, :name)
  .actions
    = f.submit 'Update Recipe'

= link_to 'Show', @recipe
\|
= link_to 'Back', recipes_path
