= form_for @recipe, :html => {:id => "new_recipe"} do |f|
  - if @recipe.errors.any?
    #error_explanation
      %h2= "#{pluralize(@recipe.errors.count, "error")} prohibited this recipe from being saved:"
      %ul
        - @recipe.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :recipe_name
    = f.text_field :name
    = collection_check_boxes(:ingredients, :ingredient_ids, Ingredient.all, :id, :name)
  .actions
    = f.submit 'Create Recipe'
