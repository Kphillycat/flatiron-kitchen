%h1 Editing ingredient

= form_for @ingredient, :html => { :id => "edit_ingredient_#{@ingredient.id}"} do |f|
  - if @ingredient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ingredient.errors.count, "error")} prohibited this ingredient from being saved:"
      %ul
        - @ingredient.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ingredient_name
    = f.text_field :name
  .actions
    = f.submit 'Update Ingredient'

= link_to 'Show', @ingredient
\|
= link_to 'Back', ingredients_path
